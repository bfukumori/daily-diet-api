generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id       String @id @default(uuid())
  email    String @unique
  username String
  password String
  meals    Meal[]

  createdAt DateTime @default(now())

  @@map("users")
}

model Meal {
  id          String  @id @default(uuid())
  name        String
  description String
  inDiet      Boolean
  userId      String

  createdAt DateTime @default(now())

  User User? @relation(fields: [userId], references: [id])

  @@map("meals")
}
